<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contactFragment">
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.xender.fragment.ContactFragment"

        tools:layout="@layout/fragment_contact">

        <action
            android:id="@+id/action_contactFragment_to_folderFragment"
            app:destination="@id/folderFragment" />
        <action
            android:id="@+id/action_contactFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.example.xender.fragment.PhotoFragment"

        tools:layout="@layout/fragment_photo">

        <action
            android:id="@+id/action_photoFragment_to_contactFragment"
            app:destination="@id/contactFragment" />
        <action
            android:id="@+id/action_photoFragment_to_folderFragment"
            app:destination="@id/folderFragment" />
    </fragment>
    <fragment
        android:id="@+id/folderFragment"
        android:name="com.example.xender.fragment.FolderFragment"

        tools:layout="@layout/fragment_folder">

        <action
            android:id="@+id/action_folderFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
        <action
            android:id="@+id/action_folderFragment_to_contactFragment"
            app:destination="@id/contactFragment" />
    </fragment>
</navigation>